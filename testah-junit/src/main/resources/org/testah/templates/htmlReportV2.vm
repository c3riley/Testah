    <body class='content'>
      <div class="col-12 center">
        <h4 class="plan-status-$testPlan.getStatusEnum()">Automation Results</h4>
        <p>$testPlan.getName() [ $testPlan.getSource() ]</p>
      </div>
      <div class="container-fluid">
        <div class="row">
          <div class="col-8">
            <div class="container">
              <div class="row">
                <div class="col-3">
                  <div class="card card-fixed-height shadow p-3 mb-2 bg-white rounded">
                    <div class="card-body center">
                      <p class="card-title">Total Tests</p>
                      <h5 id='tl' class="card-text"></h5>
                    </div>
                  </div>
                </div>
                <div class="col-3">
                  <div class="card card-fixed-height card-fixed-height shadow p-3 mb-2 bg-white rounded">
                    <div class="card-body center">
                      <p class="card-title">Passed</p>
                      <h5 id='sc' class="card-text">$testPlan.getRunInfo().getPass()</h5>
                    </div>
                  </div>
                </div>
                <div class="col-3">
                  <div class="card card-fixed-height shadow p-3 mb-2 bg-white rounded">
                    <div class="card-body center">
                      <p class="card-title">Failed</p>
                      <h5 id='fl' class="card-text">$testPlan.getRunInfo().getFail()</h5>
                    </div>
                  </div>
                </div>
                <div class="col-3">
                  <div class="card card-fixed-height card-fixed-height shadow p-3 mb-2 bg-white rounded">
                    <div class="card-body center">
                      <p class="card-title">Ignored</p>
                      <h5 id='na' class="card-text">$testPlan.getRunInfo().getIgnore()</h5>
                    </div>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-6">
                  <div class="card card-fixed-height shadow p-3 mb-2 bg-white rounded">
                    <div class="card-body center">
                      <p class="card-title">Time</p>
                      <h5 class="card-text-sm">$util.toDateString($testPlan.getRunTime().getStartTime())
                                            to $util.toDateString($testPlan.getRunTime().getEndTime())</h5>
                    </div>
                  </div>
                </div>
                <div class="col-6">
                  <div class="card card-fixed-height card-fixed-height shadow p-3 mb-2 bg-white rounded">
                    <div class="card-body center">
                      <p class="card-title">Duration</p>
                      <h5 class="card-text-sm">$util.getDurationPretty( $testPlan.getRunTime().getDuration())</h5>
                    </div>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-3">
                  <div class="card card-fixed-height shadow p-3 mb-2 bg-white rounded">
                    <div class="card-body center">
                      <p class="card-title">User</p>
                      <h5 id='tl' class="card-text-sm">$!testPlan.getUser()</h5>
                    </div>
                  </div>
                </div>
                <div class="col-3">
                  <div class="card card-fixed-height shadow p-3 mb-2 bg-white rounded">
                    <div class="card-body center">
                      <p class="card-title">Build</p>
                      <h5 id='sc' class="card-text-sm">#if("$!testPlan.getCiUrl()" != "")


                        <a href='testPlan.getCiUrl()' target='_blank'>View CI</a>
                                            #end

                      </h5>
                    </div>
                  </div>
                </div>
                <div class="col-3">
                  <div class="card card-fixed-height shadow p-3 mb-2 bg-white rounded">
                    <div class="card-body center">
                      <p class="card-title">Built On</p>
                      <h5 id='fl' class="card-text-sm">$!testPlan.getRunInfo().getRunTimeProperties().get("builtOn")</h5>
                    </div>
                  </div>
                </div>
                <div class="col-3">
                  <div class="card card-fixed-height shadow p-3 mb-2 bg-white rounded">
                    <div class="card-body center">
                      <p class="card-title">Environment</p>
                      <h5 id='na' class="card-text-sm">$!testPlan.getEnvironment()</h5>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="col-4 center">
                    Run Result


